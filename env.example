# Bitcoin Raw Data Collector Configuration

# ============================================================================
# BITCOIN CORE RPC SETTINGS
# ============================================================================
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your_rpc_user
BITCOIN_RPC_PASSWORD=your_rpc_password
BITCOIN_RPC_TIMEOUT=30

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bitcoin_data
DB_USER=bitcoin_collector
DB_PASSWORD=your_db_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# SYNC SETTINGS
# ============================================================================
SYNC_BATCH_SIZE=100
SYNC_START_HEIGHT=0
SYNC_CONCURRENT_BLOCKS=5
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/btc_collector.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# ============================================================================
# MONITORING SETTINGS
# ============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
CACHE_SIZE_MB=512
WORKER_THREADS=4
QUEUE_SIZE=1000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ADDRESS_TRACKING=true
ENABLE_DAILY_STATS=true
ENABLE_MEMPOOL_MONITORING=false